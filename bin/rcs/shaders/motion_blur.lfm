[renderfeature]
name=ERPF_PP_MOTIONBLUR
[ERPL_POSTPROCESS]
	pass=ERP_MAIN
[/ERPL_POSTPROCESS]
[/renderfeature]

[renderpass]
  feature=ERPF_PP_MOTIONBLUR
  lang=glsl
  quality=150
  pipeline=ERPL_POSTPROCESS
  pass=ERP_MAIN
  stage=ERPS_MAIN
  numtextures=2
  [vertexshader]
    code=void main()\
	{\
		gl_TexCoord[0] = gl_MultiTexCoord0;\
		gl_Position = ftransform();\
	}
  [/vertexshader]
  [pixelshader]
    code=uniform sampler2D tex0;\
	uniform sampler2D tex1;\
	float strength = 0.9;\
	void main()\
	{\
	    gl_FragColor = mix( texture2D( tex0, gl_TexCoord[0].xy ),\
                        texture2D( tex1, gl_TexCoord[0].xy ),\
                        vec4( strength, strength, strength, strength ) );\
	}
  [/pixelshader]
[/renderpass]
